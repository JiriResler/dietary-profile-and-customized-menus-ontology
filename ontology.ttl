@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ontology: <https://raw.githubusercontent.com/JiriResler/dietary-profile-and-customized-menus-resources/main/ontology#> .

# Ontology
ontology:
  a owl:Ontology ;
  rdfs:label "Dietary profile and customized menus ontology"@en ;
  rdfs:comment "This ontology describes the classes and properties used by the suite of applications to display customized restaurant menus to guests based on their dietary profiles."@en .

# Classes
ontology:DietaryProfile
  a foaf:PersonalProfileDocument ;
  rdfs:label "Dietary profile"@en ;
  rdfs:comment "A dietary profile of a foaf:Person containing their allergies, diets, and taste preferences."@en .

ontology:Allergen 
  a rdfs:Class ;
  rdfs:label "Allergen"@en ;
  rdfs:comment "An allergen"@en ;
  owl:sameAs <http://dbpedia.org/resource/Allergen> .

ontology:Diet 
  a rdfs:Class ;
  rdfs:label "Diet"@en ;
  rdfs:comment "A diet"@en ;
  owl:sameAs <http://dbpedia.org/resource/Diet_(nutrition)> .

# Properties
ontology:allergenNumber
  a rdf:Property ;
  rdfs:label "Allergen number"@en ;
  rdfs:comment "A number which is used in restaurant menus to identify a specific allergen"@en ;
  rdfs:domain ontology:Allergen ;
  rdfs:range xsd:integer .

ontology:hasIcon
  a rdf:Property ;
  rdfs:label "Has icon"@en ;
  rdfs:comment "The URL of a file which contains an image of the allergen"@en ;
  rdfs:domain ontology:Allergen ;
  rdfs:range foaf:Image .

ontology:allergicTo
  a rdf:Property ;
  rdfs:label "Allergic to"@en ;
  rdfs:comment ""@en ;
  rdfs:domain foaf:Person ;
  rdfs:range ontology:Allergen .

ontology:onDiet
  a rdf:Property ;
  rdfs:label "On diet"@en ;
  rdfs:comment ""@en ;
  rdfs:domain foaf:Person ;
  rdfs:range ontology:Diet .
